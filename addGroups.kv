#:set darkBG  (13/255, 12/255, 29/255, 1)
#:set oxfordBlue  (22/255, 27/255, 51/255, 1)
#:set purpleNavy  (71/255, 73/255, 115/255, 1)
#:set violetGrey  (166/255, 156/255, 172/255, 1)
#:set almondWhite  (241/255, 218/255, 196/255, 1)


<addGroups>:
    commandState: infoLabel

    BoxLayout:
        spacing: 30
        padding: 10
        orientation: "vertical"

        Banner:
            size_hint: 1, .2
        
        BoxLayout:
            orientation: "horizontal"
            spacing: 20
            padding: 20
            size_hint: 1, .2

            Label:
                text: "NAME :"
                color: almondWhite
                font_size: 38
                size_hint: .3, 1
                pos_hint: {"center_x": .7}
            
            TextInput:
                id: newGroupName
                font_color: darkBG
                pos_hint: {"center_x": .5}
                background_color: almondWhite
                size_hint: .5, 1
                multiline: False
                # deprecated ! find new way to do it
                padding_y: [self.height // 2.0 - (self.line_height // 2.0) * len(self._lines), 0]
                font_size: 24

        BoxLayout:
            spacing: 30
            padding: 20
            size_hint: 1, .15

            Label:
                id: infoLabel
                text:""
                size_hint: .3, 1

            Button:
                id: newGroupBtn
                text: "OK"
                color: almondWhite
                background_color: violetGrey
                size_hint: .5, 1
                pos_hint: {"right": 1}
                on_press:
                    root.groupName = newGroupName.text
                    root.checkUp()
                    
        
        Button:
            text: "BACK"
            color: almondWhite
            background_color:  purpleNavy
            size_hint: .30, None
            pos_hint: {"right": .95}
            on_press:
                root.manager.current = "MainPage"
                root.manager.transition.direction = "left"
                
        
        Footer:
            size_hint: 1, .1