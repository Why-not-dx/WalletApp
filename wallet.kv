#:set darkBG  (13/255, 12/255, 29/255, 1)
#:set oxfordBlue  (22/255, 27/255, 51/255, 1)
#:set purpleNavy  (71/255, 73/255, 115/255, 1)
#:set violetGrey  (166/255, 156/255, 172/255, 1)
#:set almondWhite  (241/255, 218/255, 196/255, 1)

MainPage:

<Banner@BoxLayout>:
    BoxLayout:
        ortientation: "horizontal"
        
        Image:
            source:"./images/logo.jpg" 
            pos_hint: {"x": 0}
            size_hint: .2, 1

        Label:
            markup: True
            text: "[b]MY WALLET[/b]"
            background_color: purpleNavy
            font_size: 32
            color: almondWhite
            size_hint: .6, 1
            
<Button>:
    background_color: violetGrey
    color: almondWhite
    font_name: "Candara"
    font_size: 24
    font_family: "bold"

<scrollerPage>:
    viewclass: "customButton"
    RecycleBoxLayout:
        padding: 30
        spacing: 10
        default_size: None, 100
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: "vertical"
        background_color: oxfordBlue

<RoundedButton@Button>:
    background_color: 0, 0, 0, 0
    background_normal: ''
    canvas.before:
        Color:
            rgba: purpleNavy if self.state == "normal"  else violetGrey
        RoundedRectangle:
            size_hint: self.size
            pos: self.pos
            radius: [30,]

<Footer@BoxLayout>:
    spacing: 15
    orientation: "horizontal"
    Label:
        text: "WalletApp by Tony"
        background_color: oxfordBlue
        size_hint: .40, None
        font_size: 12
    
    Image:
        source:"./images/github.png"
        size_hint: .2, None
    
    Image:
        source:"./images/youtube.png"
        size_hint: .2, None
    Image:
        source:"./images/coffee.png"
        size_hint: .2, None

<RoundedLabel@Label>:
    background_color: 0, 0, 0, 0
    font_size: 24
    font_name: "Candara"
    canvas.before:
        Color:
            rgba: oxfordBlue
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [20,]

<MainPage>:
    scrollerName: scrollerController
    BoxLayout:
        orientation: "vertical"
        padding : 40
        spacing: 30

        Banner:
            size_hint: 1, .2
        
        Label:
            text: ""
            size_hint:1,.1
            background_color: almondWhite

        Button:
            id: "newGroupBtn"
            text: "Create a new group"
            size_hint: 1, None
            on_press:
                root.manager.current = "addGroups"
                root.manager.transition.direction = "right"

        scrollerPage:
            id: scrollerController

        Footer:
            size_hint: .9, None